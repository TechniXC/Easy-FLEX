<Controls:MetroWindow   x:Class="Easy_Check_in.MainWindow"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:local="clr-namespace:Easy_Check_in"
                        mc:Ignorable="d"
                        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                        Title="Easy Check-In" Height="450" Width="801.2"
                        GlowBrush="{DynamicResource AccentColorBrush}"
                        WindowStartupLocation="CenterScreen">
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="Options" Click="Options_Click"/>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <Grid Margin="0,0,4,0">
        <TabControl Name="Tabs" Margin="10,10,-0.8,10">
            <TabItem Name="Greeting_Tab" Header="Greetings" IsEnabled="False">
                <Grid Background="White" Margin="0,0,-0.4,-0.4">
                    <Label Content="Welcome to Easy FLEX. &#xA;This program will help you establish a connection to &#xA;your company's internal network and continue work &#xA;from any place convenient for you.&#xD;&#xA;&#xD;&#xA;Press the button on the bottom of the windows and Easy FLEX&#xD;&#xA;will check your Wi-Fi adapter settings." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="262" Width="724" FontFamily="Microsoft JhengHei UI" FontSize="24"/>
                    <Button x:Name="Greeting_Ok_Button" Content="Let's Start" HorizontalAlignment="Left" Margin="632,305,0,0" VerticalAlignment="Top" Width="136" Height="39" FontSize="14" Style="{StaticResource AccentedSquareButtonStyle}" Click="Greeting_Ok_Button_Click"/>
                </Grid>
            </TabItem>
            <TabItem Name="Wifi_Tab" Header="Wi-Fi Connect" IsEnabled="False">
                <Grid Background="White">
                    <Label Content="Please connect to Wi-Fi network to get Internet access&#xD;&#xA;according to the video Guide. It is needed to establish&#xD;&#xA; VPN tunnel." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="103" Width="724" FontFamily="Microsoft JhengHei UI" FontSize="24"/>
                    <MediaElement x:Name="wifi_videoguide" HorizontalAlignment="Left" Height="256" Margin="313,88,0,0" VerticalAlignment="Top" Width="455" Source="C:\Temp\wifi_guide.mkv" Cursor="None" Stretch="Fill" UnloadedBehavior="Manual" LoadedBehavior="Manual" Position="0:0:3"/>
                </Grid>
            </TabItem>
            <TabItem Name="Captive_Tab" Header="Captive Portal" IsEnabled="False">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Name="VPN_Tab"  Header="VPN Tunnel" IsEnabled="False">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Name="Connected_Tab" Header="Connected" IsEnabled="False">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>
